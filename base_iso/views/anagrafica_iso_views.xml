<odoo>
    <record id="anagrafica_iso_tree" model="ir.ui.view">
        <field name="name">anagrafica_iso_tree</field>
        <field name="model">anagrafica.iso</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nome" string="Nome" />
                <field name="codice" string="Codice" />
            </tree>
        </field>
    </record>

    <record id="anagrafica_iso_form" model="ir.ui.view">
        <field name="name">anagrafica_iso_form</field>
        <field name="model">anagrafica.iso</field>
        <field name="arch" type="xml">
            <form string="Connector Config">
                <sheet>
                    <group string="ISO">
                        <field name="nome" string="Nome" />
                        <field name="codice" string="Codice" />
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="anagrafica_iso_action" model="ir.actions.act_window">
        <field name="name">Angrafiche ISO</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">anagrafica.iso</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="base_iso.anagrafica_iso_tree" />
    </record>



<!--    <menuitem id="anagrafica_iso_menu" name="Angrafiche ISO" parent="sale.sale_order_menu" action="anagrafica_iso_action" sequence="110"/>-->

</odoo>